<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="선택을 시작하겠습니까?"
            android:textSize="20dp"
            android:textColor="#50000000"
            android:layout_margin="20dp"
            android:textStyle="bold"
            />
        <CheckBox
            android:id="@+id/cb_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="시작함"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/textView02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="좋아하는 애완동물?"
            android:textSize="20dp"
            android:textColor="#50000000"
            android:layout_margin="20dp"
            android:textStyle="bold"
            />
        <RadioGroup
            android:id="@+id/rg_animal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            >
            <RadioButton
                android:id="@+id/rb_dog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="강아지"
                android:textStyle="bold"
                />
            <RadioButton
                android:id="@+id/rb_cat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="고양이"
                android:textStyle="bold"
                />
            <RadioButton
                android:id="@+id/rb_rabbit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="토끼"
                android:textStyle="bold"
                />
        </RadioGroup>

        <Button
            android:id="@+id/btn_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="선택 완료"
            android:layout_marginLeft="20dp"
            />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_gravity="center_horizontal"


        >
        <ImageView
            android:id="@+id/frame_dog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/dog"
            android:maxWidth="300dp"
            android:maxHeight="300dp"
            android:adjustViewBounds="true"
            />
        <ImageView
            android:id="@+id/frame_cat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/cat"
            android:maxWidth="300dp"
            android:maxHeight="300dp"
            android:adjustViewBounds="true"
            />
        <ImageView
            android:id="@+id/frame_rabbit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/rabbit"
            android:maxWidth="300dp"
            android:maxHeight="300dp"
            android:adjustViewBounds="true"
            />



    </FrameLayout>


















</LinearLayout>